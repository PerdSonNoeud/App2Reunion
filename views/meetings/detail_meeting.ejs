<!--
  D√©tails d'une r√©union sp√©cifique
  
  Ce template affiche tous les d√©tails d'une r√©union:
  - Informations g√©n√©rales (titre, description, lieu)
  - Organisateur et participants
  - Statut de l'utilisateur connect√©
  - Cr√©neaux horaires propos√©s
  - Actions sp√©cifiques pour l'organisateur
  
  @template views/meetings/detail_meeting
  @requires partials/header
  @requires partials/footer
  @requires css/meeting_detail.css
  @param {Object} meeting - Informations sur la r√©union
  @param {Object} organizer - Informations sur l'organisateur
  @param {Array} participants - Liste des participants enregistr√©s
  @param {Array} guests - Liste des participants invit√©s sans compte
  @param {Array} timeSlots - Liste des cr√©neaux horaires propos√©s
  @param {Object} responses - R√©ponses des participants pour chaque cr√©neau
  @param {Object} userResponses - R√©ponses de l'utilisateur connect√©
  @param {Object} user - Informations sur l'utilisateur connect√©
-->

<!-- Inclusion de l'en-t√™te commun √† toutes les pages (navigation, styles globaux, etc.) -->
<%- include('../partials/header') %>

<!-- Conteneur principal de la page de d√©tail d'une r√©union -->
<div class="meeting-detail-container">
    <!-- Chargement du fichier CSS sp√©cifique pour cette page -->
    <link rel="stylesheet" href="/css/meeting_detail.css" type="text/css">

    <!-- 
      SECTION 1: EN-T√äTE DE LA R√âUNION
      Affiche le titre de la r√©union et les boutons d'action pour l'organisateur
    -->
    <div class="meeting-header">
        <!-- Titre de la r√©union -->
        <h1><%= meeting.title %></h1>
        
        <!-- Actions disponibles pour l'organisateur (modifier/supprimer) -->
        <div class="meeting-actions">
            <!-- V√©rifie si l'utilisateur connect√© est l'organisateur de la r√©union -->
            <% if (meeting.uid === user.uid) { %>
                <!-- Lien pour modifier la r√©union -->
                <a href="/meetings/edit/<%= meeting.mid %>" class="btn-edit">Modifier</a>
                
                <!-- Formulaire pour supprimer la r√©union avec confirmation -->
                <form action="/meetings/<%= meeting.mid %>/delete" method="POST" class="delete-form">
                    <button type="submit" class="btn-delete" onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer cette r√©union ?')">
                        Supprimer
                    </button>
                </form>
            <% } %>
        </div>
    </div>

    <!-- 
      SECTION 2: INFORMATIONS D√âTAILL√âES DE LA R√âUNION
      Contient les sous-sections: d√©tails g√©n√©raux, participants, cr√©neaux horaires
    -->
    <div class="meeting-info">
        <!-- 
          SOUS-SECTION 2.1: D√âTAILS G√âN√âRAUX
          Affiche la description, l'organisateur, le statut de l'utilisateur et les participants
        -->
        <div class="info-section">
            <h2>D√©tails</h2>
            
            <!-- Description de la r√©union (texte libre) -->
            <div class="info-group">
                <label>Description</label>
                <!-- Affiche la description ou un message par d√©faut si non d√©finie -->
                <p><%= meeting.description || 'Aucune description' %></p>
            </div>
            
            <!-- Nom de l'organisateur de la r√©union -->
            <div class="info-group">
                <label>Organisateur</label>
                <p><%= organizer.name %></p>
            </div>
            
            <!-- 
              Statut de l'utilisateur connect√© par rapport √† cette r√©union
              Diff√©rent selon que l'utilisateur est l'organisateur ou un participant
            -->
            <div class="info-group">
                <label>Votre statut</label>
                <!-- Si l'utilisateur est l'organisateur -->
                <% if (meeting.uid === user.uid) { %>
                    <div class="status-tag organizer">
                        <i class="fas fa-crown"></i> <p> Organisateur </p>
                    </div>
                <!-- Si l'utilisateur est un participant -->
                <% } else { %>
                    <!-- 
                      Recherche du statut de l'utilisateur dans la liste des participants
                      Valeurs possibles: 'confirmed', 'declined', 'pending'
                    -->
                    <% 
                        let participantStatus = 'pending'; // Statut par d√©faut
                        // Parcours la liste des participants pour trouver le statut de l'utilisateur connect√©
                        participants.forEach(participant => {
                            if (participant.uid === user.uid && participant.status) {
                                participantStatus = participant.status;
                            }
                        });
                    %>
                    
                    <!-- Affichage du statut avec l'ic√¥ne et la couleur appropri√©es -->
                    <% if (participantStatus === 'confirmed') { %>
                        <div class="status-tag confirmed">
                            <i class="fas fa-check-circle"></i> <p> Confirm√© </p>
                        </div>
                    <% } else if (participantStatus === 'declined') { %>
                        <div class="status-tag declined">
                            <i class="fas fa-times-circle"></i> <p> D√©clin√© </p>
                        </div>
                    <% } else { %>
                        <div class="status-tag pending">
                            <i class="fas fa-clock"></i> <p> En attente de r√©ponse </p>
                        </div>
                    <% } %>
                <% } %>
            </div>
            
            <!-- 
              LISTE DES PARTICIPANTS
              Affiche tous les participants avec leurs statuts respectifs
            -->
            <div class="info-group">
                <label>Participants</label>
                <ul class="participants-list">
                    <!-- 
                      Participants avec compte utilisateur
                      Affiche le nom, l'email et le statut de participation
                    -->
                    <% if (participants && participants.length > 0) { %>
                        <% participants.forEach(participant => { %>
                            <li>
                                <!-- Nom et email du participant -->
                                <%= participant.name %> (<%= participant.email %>)
                                
                                <!-- 
                                  N'affiche le statut que pour les participants (pas pour l'organisateur)
                                  L'organisateur est toujours consid√©r√© comme "confirm√©"
                                -->
                                <% if (participant.uid !== meeting.uid) { %>
                                    <% if (participant.status === 'confirmed') { %>
                                        <span class="status-tag confirmed"><i class="fas fa-check-circle"></i></span>
                                    <% } else if (participant.status === 'declined') { %>
                                        <span class="status-tag declined"><i class="fas fa-times-circle"></i></span>
                                    <% } else { %>
                                        <span class="status-tag pending"><i class="fas fa-clock"></i></span>
                                    <% } %>
                                <% } %>
                            </li>
                        <% }); %>
                    <% } %>

                    <!-- 
                      Participants invit√©s sans compte utilisateur (guests)
                      Ces participants ont √©t√© invit√©s par email mais n'ont pas de compte sur la plateforme
                    -->
                    <% if (guests && guests.length > 0) { %>
                        <% guests.forEach(guest => { %>
                            <li>
                                <!-- Affiche le nom s'il existe, sinon l'email -->
                                <%= guest.name || guest.email %> (Invit√©)
                                
                                <!-- Statut de participation pour les invit√©s -->
                                <% if (guest.status === 'confirmed') { %>
                                    <span class="status-tag confirmed"><i class="fas fa-check-circle"></i></span>
                                <% } else if (guest.status === 'declined') { %>
                                    <span class="status-tag declined"><i class="fas fa-times-circle"></i></span>
                                <% } else { %>
                                    <span class="status-tag pending"><i class="fas fa-clock"></i></span>
                                <% } %>
                            </li>
                        <% }); %>
                    <% } %>

                    <!-- Message affich√© s'il n'y a aucun participant -->
                    <% if ((!participants || participants.length === 0) && (!guests || guests.length === 0)) { %>
                        <li>Aucun participant</li>
                    <% } %>
                </ul>
            </div>
            
            <!-- Lieu de la r√©union -->
            <div class="info-group">
                <label>Lieu</label>
                <div class="location-info">
                    <i class="fas fa-map-marker-alt"></i>
                    <!-- Affiche le lieu ou un message par d√©faut si non d√©fini -->
                    <p><%= meeting.location || 'Aucun lieu sp√©cifi√©' %></p>
                </div>
            </div>
        </div>

        <!-- 
          SOUS-SECTION 2.2: CR√âNEAUX HORAIRES PROPOS√âS
          Affiche les diff√©rentes propositions d'horaires pour la r√©union
          Interface diff√©rente selon que la r√©union est confirm√©e ou non
        -->
        <div class="info-section time-slots-section">
            <h2><i class="far fa-calendar-alt"></i> Cr√©neaux propos√©s</h2>
            
            <!-- 
              Si la r√©union n'est pas encore confirm√©e (en phase de proposition)
              Affiche les cr√©neaux propos√©s pour permettre aux participants de voter
            -->
            <% if (meeting.status !== 'confirmed') { %>
                <div class="time-slots">
                    <!-- S'il y a des cr√©neaux horaires propos√©s -->
                    <% if (timeSlots && timeSlots.length > 0) { %>
                        <!-- 
                          TABLEAU DES DISPONIBILIT√âS (visible uniquement par l'organisateur)
                          Montre une vue synth√©tique des r√©ponses de tous les participants
                        -->
                        <% if (meeting.uid === user.uid) { %>
                            <div class="availability-table-container">
                                <h3>R√©ponses des participants</h3>
                                <table class="availability-table">
                                    <!-- En-t√™te du tableau avec les cr√©neaux horaires -->
                                    <thead>
                                        <tr>
                                            <th>Participant</th>
                                            <!-- G√©n√®re une colonne pour chaque cr√©neau propos√© -->
                                            <% timeSlots.forEach(slot => { %>
                                                <th>
                                                    <!-- Format court date: ex. "Lun. 12 jan." -->
                                                    <%= new Date(slot.start_time).toLocaleDateString('fr-FR', {weekday: 'short', day: 'numeric', month: 'short'}) %>
                                                    <br>
                                                    <!-- Format heure: ex. "14:30" -->
                                                    <%= new Date(slot.start_time).toLocaleTimeString('fr-FR', {hour: '2-digit', minute: '2-digit'}) %>
                                                </th>
                                            <% }); %>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- 
                                          Participants avec compte utilisateur
                                          Pour chaque participant, on affiche sa disponibilit√© pour chaque cr√©neau
                                        -->
                                        <% if (participants && participants.length > 0) { %>
                                            <% participants.forEach(participant => { %>
                                                <!-- On n'affiche pas l'organisateur dans cette liste -->
                                                <% if (participant.uid !== meeting.uid) { %>
                                                    <tr>
                                                        <td><%= participant.name %></td>
                                                        <!-- Pour chaque cr√©neau, recherche de la disponibilit√© du participant -->
                                                        <% timeSlots.forEach(slot => { %>
                                                            <% 
                                                                // Valeurs possibles: 'available', 'maybe', 'unavailable', 'pending'
                                                                let availability = 'pending'; // Par d√©faut: en attente
                                                                
                                                                // Recherche de la r√©ponse du participant pour ce cr√©neau
                                                                if (responses && responses[slot.tid]) {
                                                                    const participantResponse = responses[slot.tid].find(r => r.id === participant.uid);
                                                                    if (participantResponse) {
                                                                        availability = participantResponse.availability;
                                                                    }
                                                                }
                                                            %>
                                                            <!-- Cellule color√©e selon la disponibilit√© -->
                                                            <td class="response-cell <%= availability %>">
                                                                <% if (availability === 'available') { %>
                                                                    <i class="fas fa-check-circle"></i>
                                                                <% } else if (availability === 'maybe') { %>
                                                                    <i class="fas fa-question-circle"></i>
                                                                <% } else if (availability === 'unavailable') { %>
                                                                    <i class="fas fa-times-circle"></i>
                                                                <% } else { %>
                                                                    <i class="fas fa-clock"></i>
                                                                <% } %>
                                                            </td>
                                                        <% }); %>
                                                    </tr>
                                                <% } %>
                                            <% }); %>
                                        <% } %>

                                        <!-- 
                                          Participants invit√©s sans compte
                                          Pour chaque invit√©, on affiche sa disponibilit√© pour chaque cr√©neau
                                        -->
                                        <% if (guests && guests.length > 0) { %>
                                            <% guests.forEach(guest => { %>
                                                <tr>
                                                    <td><%= guest.name || guest.email %> (Invit√©)</td>
                                                    <!-- Pour chaque cr√©neau, recherche de la disponibilit√© de l'invit√© -->
                                                    <% timeSlots.forEach(slot => { %>
                                                        <% 
                                                            // Par d√©faut: en attente de r√©ponse
                                                            let availability = 'pending';
                                                            
                                                            // Recherche de la r√©ponse de l'invit√© pour ce cr√©neau
                                                            // PS: pour les invit√©s, on utilise gid (guest ID) au lieu de uid
                                                            if (responses && responses[slot.tid]) {
                                                                const guestResponse = responses[slot.tid].find(r => r.id === guest.gid && r.isGuest);
                                                                if (guestResponse) {
                                                                    availability = guestResponse.availability;
                                                                }
                                                            }
                                                        %>
                                                        <!-- Cellule color√©e selon la disponibilit√© -->
                                                        <td class="response-cell <%= availability %>">
                                                            <% if (availability === 'available') { %>
                                                                <i class="fas fa-check-circle"></i>
                                                            <% } else if (availability === 'maybe') { %>
                                                                <i class="fas fa-question-circle"></i>
                                                            <% } else if (availability === 'unavailable') { %>
                                                                <i class="fas fa-times-circle"></i>
                                                            <% } else { %>
                                                                <i class="fas fa-clock"></i>
                                                            <% } %>
                                                        </td>
                                                    <% }); %>
                                                </tr>
                                            <% }); %>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>

                        <!-- 
                          LISTE DES CR√âNEAUX DISPONIBLES
                          Affiche chaque cr√©neau propos√© avec ses d√©tails (date et heure)
                        -->
                        <% timeSlots.forEach(slot => { %>
                            <% 
                                // D√©termine la classe de s√©lection en fonction de la r√©ponse de l'utilisateur
                                let selectionClass = '';
                                if (userResponses && userResponses[slot.tid]) {
                                    selectionClass = 'selected-' + userResponses[slot.tid];
                                }
                            %>
                            <div class="time-slot-item" <%= selectionClass %>">
                                <div class="slot-content">
                                    <!-- Date au format long: ex. "Lundi 12 janvier 2023" -->
                                    <div class="date">
                                        <i class="fas fa-calendar-day"></i>
                                        <%= new Date(slot.start_time).toLocaleDateString('fr-FR', {weekday: 'long', day: 'numeric', month: 'long', year: 'numeric'}) %>
                                    </div>
                                    <!-- Heure de d√©but et de fin: ex. "14:30 - 16:00" -->
                                    <div class="time">
                                        <i class="fas fa-clock"></i>
                                        <%= new Date(slot.start_time).toLocaleTimeString('fr-FR', {hour: '2-digit', minute: '2-digit'}) %> -
                                        <%= new Date(slot.end_time).toLocaleTimeString('fr-FR', {hour: '2-digit', minute: '2-digit'}) %>
                                    </div>
                                    <!--
                                      BOUTONS DE R√âPONSE (visible uniquement par les participants)
                                      Permet aux participants de r√©pondre √† la proposition de cr√©neau, directement depuis la liste
                                    -->
                                    <% if (meeting.uid !== user.uid && meeting.status !== 'confirmed') { %>
                                    <div class="direct-response-buttons">
                                        <form action="/meetings/<%= meeting.mid %>/respond-direct" method="POST" class="direct-response-form">
                                            <input type="hidden" name="tid" value="<%= slot.tid %>">
                                            <input type="hidden" name="availability" value="available">
                                            <button type="submit" class="emoji-btn <%= userResponses[slot.tid] === 'available' ? 'active' : '' %>" title="Disponible">
                                              ‚úÖ
                                            </button>
                                        </form>
                                      
                                        <form action="/meetings/<%= meeting.mid %>/respond-direct" method="POST" class="direct-response-form">
                                            <input type="hidden" name="tid" value="<%= slot.tid %>">
                                            <input type="hidden" name="availability" value="maybe">
                                            <button type="submit" class="emoji-btn <%= userResponses[slot.tid] === 'maybe' ? 'active' : '' %>" title="Peut-√™tre">
                                              üïê
                                            </button>
                                        </form>
                                      
                                        <form action="/meetings/<%= meeting.mid %>/respond-direct" method="POST" class="direct-response-form">
                                            <input type="hidden" name="tid" value="<%= slot.tid %>">
                                            <input type="hidden" name="availability" value="unavailable">
                                            <button type="submit" class="emoji-btn <%= userResponses[slot.tid] === 'unavailable' ? 'active' : '' %>" title="Indisponible">
                                              ‚ùå
                                            </button>
                                        </form>
                                    </div>
                                    <% } %>
                                
                                    <!--
                                      BOUTON DE CONFIRMATION (visible uniquement par l'organisateur)
                                      Permet √† l'organisateur de confirmer d√©finitivement un cr√©neau
                                    -->
                                    <% if (meeting.uid === user.uid) { %>
                                    <form action="/meetings/<%= meeting.mid %>/confirm" method="POST" class="confirm-slot-form" style="display:inline;">
                                        <input type="hidden" name="tid" value="<%= slot.tid %>">
                                        <button type="submit" class="btn-confirm-slot">
                                            <i class="fas fa-check"></i> Confirmer
                                        </button>
                                    </form>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <!-- Message affich√© s'il n'y a aucun cr√©neau propos√© -->
                        <div class="no-slots">
                            <i class="fas fa-calendar-times"></i>
                            <p>Aucun cr√©neau disponible</p>
                        </div>
                    <% } %>
                </div>
            <!-- 
              Si la r√©union est confirm√©e
              Affiche uniquement le cr√©neau d√©finitif qui a √©t√© s√©lectionn√©
            -->
            <% } else { %>
                <div class="confirmed-slot">
                    <i class="fas fa-check-circle"></i>
                    <strong>Cr√©neau confirm√© :</strong>
                    <span>
                        <!-- Date au format long -->
                        <%= new Date(meeting.start_time).toLocaleDateString('fr-FR', {weekday: 'long', day: 'numeric', month: 'long', year: 'numeric'}) %>
                        de
                        <!-- Heure de d√©but -->
                        <%= new Date(meeting.start_time).toLocaleTimeString('fr-FR', {hour: '2-digit', minute: '2-digit'}) %>
                        √†
                        <!-- Heure de fin -->
                        <%= new Date(meeting.end_time).toLocaleTimeString('fr-FR', {hour: '2-digit', minute: '2-digit'}) %>
                    </span>
                </div>
            <% } %>
        </div>

        <!-- 
          SOUS-SECTION 2.3: ACTIONS POUR L'ORGANISATEUR
          Actions additionnelles disponibles uniquement pour l'organisateur
          et uniquement si la r√©union n'est pas encore confirm√©e
        -->
        <% if (meeting.uid === user.uid && meeting.status !== 'confirmed') { %>
            <div class="organizer-actions">
                <!-- Bouton pour envoyer un rappel par email √† tous les participants -->
                <form action="/meetings/<%= meeting.mid %>/remind" method="POST" class="reminder-form">
                    <button type="submit" class="btn-reminder">
                        <i class="fas fa-bell"></i> Envoyer un rappel aux participants
                    </button>
                </form>
            </div>
        <% } %>
    </div>

    <!-- Lien de retour vers la liste des r√©unions -->
    <div class="back-link">
        <a href="/meetings" class="btn-back">&larr; Retour aux r√©unions</a>
    </div>
</div>

<!-- Inclusion du pied de page commun (scripts JS, informations l√©gales, etc.) -->
<%- include('../partials/footer') %>
