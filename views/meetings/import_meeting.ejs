<!--
  Formulaire d'importation de réunions depuis un fichier iCalendar
  
  Ce template affiche un formulaire simple permettant aux utilisateurs
  d'importer des réunions à partir d'un fichier .ics (format iCalendar).
  Les événements du fichier seront convertis en réunions dans l'application.
  
  @template views/meetings/import_meeting
  @requires partials/header
  @requires partials/footer
  @param {Object} user - Informations sur l'utilisateur connecté
-->

<%- include('../partials/header') %>

<div class="container">
    <!-- En-tête explicatif -->
    <div class="header">
        <h1>Importer une réunion</h1>
        <p>Importez vos réunions à partir d'un fichier ICalendar.</p>
    </div>

    <!-- Formulaire d'importation -->
    <div class="import-form">
        <form action="/import_meeting/" method="POST" enctype="multipart/form-data">
            <!-- Sélection du fichier (seuls les .ics sont acceptés) -->
            <label for="file">Sélectionnez un fichier ICalendar (.ics) :</label>
            <input type="file" id="file" name="calendar" accept=".ics" required>
            <br>
            <!-- Bouton de soumission -->
            <button type="submit" class="btn-primary">Importer</button>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>