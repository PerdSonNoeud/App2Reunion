<!--
  Page d'erreur 404 (page non trouvée)
  
  Ce template affiche une page d'erreur 404 lorsqu'un utilisateur 
  tente d'accéder à une URL qui n'existe pas dans l'application.
  Il indique clairement l'erreur et fournit un lien de retour à l'accueil.
  
  @template views/pages/404
  @requires partials/header
  @requires partials/footer
-->

<%- include('../partials/header') %>

<div class="error-page">
    <h1>404</h1>
    <h2>Page non trouvée</h2>
    <p>La page que vous recherchez n'existe pas ou a été déplacée.</p>
    <a href="/" class="btn">Retour à l'accueil</a>
</div>

<%- include('../partials/footer') %>